---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Hr from "@/components/Hr.astro";
import PickMyBrainButton from "@/components/PickMyBrainButton.astro";
import Testimonial from "@/components/Testimonial.astro";

const painPoints = [
  "Build times are killing velocity and no one can pinpoint the exact cause.",
  "A critical feature is too slow, and the obvious fixes have already failed.",
  "Your AI or LLM integration is unreliable or too expensive, and you need a pragmatic path forward.",
  "Leadership is stuck in a debate (&ldquo;TCA vs. MVVM&rdquo;, &ldquo;SwiftUI vs. UIKit&rdquo;) and needs a working proof to make a call.",
];

const sprintTracks = [
  {
    id: "track-bottleneck",
    title: "Track 1: The Bottleneck Sprint",
    description:
      "We pick the one technical constraint that blocks progress and remove it together in 2–4 weeks.",
    bestFor: [
      "Performance issues (launch time, build times, rendering) that resist quick fixes.",
      "Architecture decisions that need a working proof before the team commits.",
      "Stalled shipping plans where leadership needs confidence in the next move.",
    ],
    outcomes: [
      "Working code merged or deployable by the end of the engagement.",
      "A concise decision log covering trade-offs and follow-on work.",
      "Telemetry or benchmarks that show the bottleneck is cleared.",
    ],
  },
  {
    id: "track-ai-team-accelerator",
    title: "Track 2: The AI Team Accelerator",
    description:
      "We install a production-minded AI workflow: prompt libraries, guardrails, and metrics that make your team faster without chaos.",
    bestFor: [
      "Teams experimenting with AI coding copilots that want measurable productivity gains.",
      "Feature teams building AI-powered experiences that must be reliable for customers.",
      "Leads who need governance, evaluation, and training so AI work sticks after the sprint.",
    ],
    outcomes: [
      "Documented AI playbooks tailored to your stack and constraints.",
      "Instrumentation and evaluation harnesses to prevent regressions and prompt drift.",
      "A roadmap for the next 90 days so your team keeps momentum without me on-call.",
    ],
  },
];

const deliverables = [
  "A working outcome: merged pull requests, a deployable fix, or a concrete proof-of-concept.",
  "A concise solution document covering architecture, trade-offs, and next steps.",
  "Embedded knowledge transfer—your team pairs throughout the sprint and owns the solution on day one.",
];

const investmentNotes = [
  "Problem complexity and scope of the bottleneck.",
  "Integration surface area (mobile, backend, infra, or AI systems).",
  "Need for production hardening versus an exploratory proof-of-concept.",
];

const goodFit = [
  "Teams that are genuinely stuck on a high-priority technical problem.",
  "Tech leads who need an experienced solver to unblock the team immediately.",
  "CTOs validating a new technology (like on-device AI or agent workflows) with a rapid PoC.",
  "Organizations that value shipping solutions over receiving lengthy documentation.",
];

const notFit = [
  "Teams looking for a comprehensive 12-month roadmap or audit.",
  "Companies that need a full-time contractor or staff augmentation.",
  "Teams without engineering capacity to pair and ship within the sprint window.",
];

const faqs = [
  {
    question: "How do we define the bottleneck to focus on?",
    answer:
      "Week 1 is collaborative. I join stand-ups, async channels, and working sessions to understand context quickly. We review telemetry, code, and real incidents together to identify the single most valuable target before implementation begins.",
  },
  {
    question: "Do you ship code with our team?",
    answer:
      "Yes. This engagement is hands-on. I pair with your engineers, draft architecture spikes, and contribute code where appropriate. The goal is to leave behind working software, not a slide deck.",
  },
  {
    question: "What if the problem spans multiple systems?",
    answer:
      "That’s common. I routinely work across iOS, backend, and infrastructure boundaries. The sprint focuses on the smallest slice that proves the approach, while the solution document maps the follow-on work your team can own.",
  },
  {
    question: "Can we extend beyond four weeks?",
    answer:
      "If the sprint uncovers additional high-impact work, we can scope a follow-up sprint or transition into the Advisory Retainer for ongoing support. The default engagement stays focused at 2–4 weeks.",
  },
  {
    question: "What if we already ran an audit?",
    answer:
      "Perfect. Bring the findings. We'll execute the highest-priority item together so the previous recommendations start delivering value immediately.",
  },
];

const nextSteps = [
  "Book a 30-minute discovery call to confirm fit, goals, and timeline.",
  "Receive a fixed-fee proposal within 24 hours outlining scope and outcomes.",
  "Kick off the sprint with discovery sessions and code access so we can ship within days.",
];

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  serviceType: "Architecture & AI Deep Dive",
  provider: {
    "@type": "Person",
    name: "Igor Tarasenko",
  },
  areaServed: "Worldwide",
  description:
    "A 2–4 week high-impact sprint with two tracks: remove a critical bottleneck or install a production-ready AI workflow, then hand the system back to your team.",
  offers: {
    "@type": "Offer",
    priceCurrency: "EUR",
    price: "10000-20000",
    priceSpecification: {
      "@type": "PriceSpecification",
      minPrice: "10000",
      maxPrice: "20000",
      priceCurrency: "EUR",
    },
  },
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: faqs.map(item => ({
    "@type": "Question",
    name: item.question,
    acceptedAnswer: {
      "@type": "Answer",
      text: item.answer,
    },
  })),
};
---

<Layout
  title="Architecture & AI Deep Dive - 2-4 Week Problem-Solving Sprint"
  description="Hire a solver, not an auditor. In 2–4 weeks we identify your most painful bottleneck and ship a working fix or proof-of-concept."
  structuredData={[serviceSchema, faqSchema]}
>
  <Header />
  <main id="main-content" class="mx-auto max-w-4xl px-4 py-16 space-y-16">
    <section class="space-y-6">
      <p class="text-sm uppercase tracking-wide text-accent">Primary Offer · Limited Availability</p>
      <h1 class="text-4xl font-bold leading-tight md:text-5xl">Architecture &amp; AI Deep Dive</h1>
      <p class="text-xl text-foreground/80">A 2–4 week sprint with dedicated tracks for stubborn bottlenecks or leveling up your AI workflow.</p>
      <p class="text-base text-foreground/70">
        Don't hire me for a six-month audit. Hire me for a focused sprint. We'll choose the track that fits, target the single problem slowing you down, and ship a working solution or proof-of-concept you can scale.
      </p>
      <p class="text-sm text-foreground/70">
        <strong>For:</strong> Teams facing a critical architecture, performance, or AI integration issue ·
        <strong>Investment:</strong> €10,000–€20,000 fixed fee ·
        <strong>Timeline:</strong> 2–4 weeks ·
        <strong>Format:</strong> Remote, highly collaborative (pairing, brainstorming, shipping)
      </p>
      <div class="flex flex-col gap-4 sm:flex-row sm:items-center">
        <PickMyBrainButton
          variant="pushable"
          duration="30min"
          text="Book Discovery Call"
          eventName="Conversion: Deep Dive Discovery Call"
          eventCategory="conversion"
          eventProps={{ service: "architecture-ai-deep-dive", placement: "hero" }}
        />
      </div>
    </section>

    <Testimonial
      quote="Igor is very experienced, knowledgeable and honest. Will be reaching out for my future needs. Thank you!"
      author="Aline Tomasian"
    />

    <Hr />

    <section class="space-y-4">
      <h2 class="text-2xl font-semibold">Stop Documenting Problems. Start Solving Them.</h2>
      <p class="text-sm text-foreground/80">
        Your team does not need another 50-page modernization plan. You need a specialist to jump in, find the leverage point, and ship the fix with you.
      </p>
      <ul class="list-disc list-inside space-y-2 text-sm text-foreground/80">
        {painPoints.map(point => (
          <li set:html={point} />
        ))}
      </ul>
      <p class="text-sm text-foreground/80">
        Curious what that looks like in practice? We’ll quantify the €50k/year tax during kickoff so leadership sees the cost of waiting.
      </p>
      <p class="text-sm text-foreground/70">
        If this sounds familiar, the Deep Dive keeps you focused on the outcome: one painful problem solved, momentum restored.
      </p>
    </section>

    <Hr />

    <section class="space-y-6">
      <h2 class="text-2xl font-semibold">Choose the track that fits</h2>
      <p class="text-sm text-foreground/80">
        Every sprint follows the same rhythm—align on the target, build with your team, hand back a working system. Pick the track that best matches the problem you want solved.
      </p>
      <div class="space-y-6">
        {sprintTracks.map(track => (
          <article id={track.id} class="rounded-lg border border-border bg-background/40 p-6 space-y-4">
            <header class="space-y-2">
              <h3 class="text-lg font-semibold text-accent">{track.title}</h3>
              <p class="text-sm text-foreground/80">{track.description}</p>
            </header>
            <div class="grid gap-4 md:grid-cols-2">
              <div class="space-y-2">
                <h4 class="text-sm font-semibold uppercase tracking-wide text-foreground/60">Best when</h4>
                <ul class="list-disc list-inside space-y-2 text-sm text-foreground/80">
                  {track.bestFor.map(item => (
                    <li>{item}</li>
                  ))}
                </ul>
              </div>
              <div class="space-y-2">
                <h4 class="text-sm font-semibold uppercase tracking-wide text-foreground/60">What we deliver</h4>
                <ul class="list-disc list-inside space-y-2 text-sm text-foreground/80">
                  {track.outcomes.map(outcome => (
                    <li>{outcome}</li>
                  ))}
                </ul>
              </div>
            </div>
          </article>
        ))}
      </div>
    </section>

    <Hr />

    <section class="space-y-6">
      <h2 class="text-2xl font-semibold">What You Get</h2>
      <ul class="list-disc list-inside space-y-2 text-sm text-foreground/80">
        {deliverables.map(item => (
          <li>{item}</li>
        ))}
      </ul>
    </section>

    <Hr />

    <section class="space-y-6">
      <h2 class="text-2xl font-semibold">Investment</h2>
      <p class="text-sm text-foreground/80">
        <strong>Fixed fee:</strong> €10,000–€20,000 depending on complexity and readiness. Pricing is confirmed after our discovery call and does not change once we kick off.
      </p>
      <div class="rounded-lg border border-border bg-background/40 p-6 space-y-3">
        <h3 class="text-lg font-semibold text-accent">What influences pricing?</h3>
        <ul class="list-disc list-inside space-y-2 text-sm text-foreground/80">
          {investmentNotes.map(note => (
            <li>{note}</li>
          ))}
        </ul>
      </div>
      <PickMyBrainButton
        variant="pushable"
        duration="30min"
        text="Talk Scope & Pricing"
        eventName="Conversion: Deep Dive Discovery Call"
        eventCategory="conversion"
        eventProps={{ service: "architecture-ai-deep-dive", placement: "investment" }}
      />
    </section>

    <Hr />

    <section class="space-y-6">
      <h2 class="text-2xl font-semibold">Is This Sprint Right for You?</h2>
      <div class="grid gap-6 md:grid-cols-2">
        <article class="rounded-lg border border-border bg-background/40 p-6">
          <h3 class="text-lg font-semibold text-accent">Best fit</h3>
          <ul class="mt-3 list-disc list-inside space-y-2 text-sm text-foreground/80">
            {goodFit.map(item => (
              <li>{item}</li>
            ))}
          </ul>
        </article>
        <article class="rounded-lg border border-border bg-background/40 p-6">
          <h3 class="text-lg font-semibold text-accent">Not ideal</h3>
          <ul class="mt-3 list-disc list-inside space-y-2 text-sm text-foreground/80">
            {notFit.map(item => (
              <li>{item}</li>
            ))}
          </ul>
        </article>
      </div>
    </section>

    <Hr />

    <section class="space-y-4" aria-labelledby="deep-dive-faq">
      <div>
        <h2 id="deep-dive-faq" class="text-2xl font-semibold">Frequently Asked Questions</h2>
      </div>
      <div class="space-y-4">
        {faqs.map(item => (
          <details class="rounded-lg border border-border bg-background/30 p-4">
            <summary class="cursor-pointer text-lg font-semibold">{item.question}</summary>
            <p class="mt-3 text-sm text-foreground/80">{item.answer}</p>
          </details>
        ))}
      </div>
    </section>

    <Hr />

    <section class="space-y-4">
      <h2 class="text-2xl font-semibold">Ready to Sprint Toward a Solution?</h2>
      <p class="text-sm text-foreground/80">
        Book a discovery call to outline your bottleneck, confirm the sprint timeline, and get a fixed proposal within 24 hours.
      </p>
      <ol class="list-decimal space-y-2 pl-4 text-sm text-foreground/80">
        {nextSteps.map(step => (
          <li>{step}</li>
        ))}
      </ol>
      <div class="flex flex-col gap-4 sm:flex-row sm:items-center">
        <PickMyBrainButton
          variant="pushable"
          duration="30min"
          text="Book Discovery Call"
          eventName="Conversion: Deep Dive Discovery Call"
          eventCategory="conversion"
          eventProps={{ service: "architecture-ai-deep-dive", placement: "footer" }}
        />
      </div>
      <p class="text-sm text-foreground/70">
        Exploring other ways to collaborate? <a class="text-accent" href="/consulting">See all consulting services &rarr;</a>
      </p>
    </section>
  </main>
  <Footer />
</Layout>
