---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import LinkButton from "@/components/LinkButton.astro";
---

<Layout
  title="Projects | Igor Tarasenko"
  description="Open source projects, iOS apps, and applied AI solutions."
>
  <Header />
  <main id="main-content" class="mx-auto max-w-5xl px-4 py-12">
    <h1 class="fade-up mb-12 text-3xl font-bold">Projects</h1>

    <section id="projects-grid">
      <div class="grid gap-6 md:grid-cols-2">
        <!-- WhisperBoard -->
        <div class="project-card fade-up" style="animation-delay: 0.1s">
          <h3 class="mb-2 text-xl font-bold">WhisperBoard</h3>
          <p class="mb-4 text-foreground/70">
            On-device AI transcription app using OpenAI's Whisper. Privacy-first voice-to-text for iOS.
          </p>
          <div class="flex gap-3 text-sm">
            <a href="https://github.com/Saik0s/WhisperBoard" class="text-accent hover:underline">GitHub</a>
            <a href="https://apps.apple.com/app/id1661442906" class="text-accent hover:underline">App Store</a>
          </div>
        </div>

        <!-- VibeSwitch Keyboard -->
        <div class="project-card fade-up" style="animation-delay: 0.2s">
          <h3 class="mb-2 text-xl font-bold">VibeSwitch Keyboard</h3>
          <p class="mb-4 text-foreground/70">
            AI-powered iOS keyboard that rewrites your text into any vibe. Privacy-first on-device processing.
          </p>
          <div class="flex gap-3 text-sm">
            <a href="https://apps.apple.com/app/id6743019968" class="text-accent hover:underline">App Store</a>
          </div>
        </div>

        <!-- DevAssistant -->
        <div class="project-card fade-up" style="animation-delay: 0.3s">
          <h3 class="mb-2 text-xl font-bold">DevAssistant</h3>
          <p class="mb-4 text-foreground/70">
            Personal task-driven autonomous agent for developers. Automate repetitive tasks intelligently.
          </p>
          <div class="flex gap-3 text-sm">
            <a href="https://github.com/Saik0s/DevAssistant" class="text-accent hover:underline">GitHub</a>
          </div>
        </div>
      </div>
    </section>

  </main>
  <Footer />
</Layout>

<style>
  .project-card {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 0.5rem;
    padding: 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
  }

  .project-card:hover {
    transform: translateY(-2px);
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.15);
  }
</style>
