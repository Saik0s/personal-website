---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import PickMyBrainButton from "@/components/PickMyBrainButton.astro";
import Hr from "@/components/Hr.astro";
import Testimonial from "@/components/Testimonial.astro";

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  serviceType: "iOS Engineering Consulting Sessions",
  provider: {
    "@type": "Person",
    name: "Igor Tarasenko",
  },
  areaServed: "Worldwide",
  description:
    "Hourly iOS mentoring and consulting sessions covering architecture, performance, and generative AI integration.",
  offers: {
    "@type": "Offer",
    priceCurrency: "EUR",
    price: "200",
    priceSpecification: {
      "@type": "UnitPriceSpecification",
      price: "200",
      priceCurrency: "EUR",
      unitText: "hour",
    },
  },
};

const sessionVariants = [
  {
    title: "Agentic Engineering Session",
    description:
      "Blend AI workflow design with live implementation so your team leaves with prompts, policies, and working automation.",
    cta: "Book Agentic Session",
  },
  {
    title: "Architecture & Code Quality Session",
    description:
      "Pair on SwiftUI/TCA design decisions, unblock migrations, and leave with a documented action plan.",
    cta: "Book Architecture Session",
  },
  {
    title: "Performance Triage Session",
    description:
      "Profile startup time, rendering, or build pipelines to find root causes and ship measurable improvements.",
    cta: "Book Performance Session",
  },
  {
    title: "AI Feature Kickstart",
    description:
      "Scope a thin slice, build a validated prototype, and hand off a playbook for iterating safely.",
    cta: "Book AI Kickstart",
  },
  {
    title: "Mentoring & Upskilling Track",
    description:
      "Pair weekly to level up on generative AI engineering, testing strategies, and modern iOS architecture patterns.",
    cta: "Start Mentoring Track",
  },
];
---

<Layout
  title="iOS Engineering Sessions - Architecture, Performance, AI Integration"
  description="Ad-hoc or ongoing iOS consulting and mentoring sessions. €200/hr, 1-10hr blocks. SwiftUI architecture, generative AI enablement, performance triage."
  structuredData={serviceSchema}
>
  <Header />
  <main id="main-content" class="mx-auto max-w-4xl px-4 py-16 space-y-16">
    <section class="space-y-6 text-left">
      <p class="text-sm uppercase tracking-wide text-accent">Tertiary Offer · Flexible Blocks</p>
      <h1 class="text-4xl font-bold leading-tight md:text-5xl">Engineering Sessions</h1>
      <h2 class="text-2xl font-semibold text-foreground">Ongoing Mentoring & Rapid Problem Solving</h2>
      <p class="text-base text-foreground/70">
        Book 1&ndash;10 hour blocks at €200/hr for hands-on pairing, performance triage, generative AI enablement, or rapid prototyping.
      </p>
      <p class="text-sm text-foreground/70">
        <strong>Best for:</strong> Immediate production fires <em>and</em> long-running mentorship that keeps your leaders current on AI and modern iOS architecture.
      </p>
      <p class="text-sm text-foreground/70">
        <strong>Availability:</strong> Limited slots reserved each month for rapid support alongside ongoing advisory retainers.
      </p>
      <p class="text-sm text-foreground/70">
        Build a continuing cadence or drop in for a single session—the format adapts to whatever upskilling or unblocker your team needs.
      </p>
      <div class="flex flex-col items-start gap-4 sm:flex-row sm:items-center">
        <PickMyBrainButton
          variant="pushable"
          duration="60min"
          text="Book a Session"
          eventName="Conversion: Session Booking"
          eventCategory="conversion"
          eventProps={{ service: "sessions", placement: "hero", product: "booking" }}
        />
      </div>
      <p class="text-sm text-foreground/70">
        <strong>For larger engagements:</strong> <a class="text-accent" href="/advisory">iOS &amp; AI Advisory Retainer</a> · <a class="text-accent" href="/deep-dive#track-ai-team-accelerator">The Sprint &mdash; AI Team Accelerator track</a>
      </p>
    </section>

    <Testimonial
      quote="Igor was so great to work with! We were able to figure out the solution to something we've been stuck on for over 2 days in less than an hour!"
      author="Alina Liu"
    />

    <Hr />

    <section class="space-y-6">
      <h2 class="text-2xl font-semibold">Is This Right for You?</h2>
      <div class="grid gap-6 md:grid-cols-2">
        <article class="rounded-lg border border-border bg-background/40 p-6">
          <h3 class="text-lg font-semibold text-accent">Best fit for:</h3>
          <ul class="mt-3 list-disc list-inside space-y-2 text-sm text-foreground/80">
            <li>Urgent, tactical problems (e.g., a production bug).</li>
            <li>A second opinion on a specific architectural decision.</li>
            <li>Validating an idea with a rapid PoC.</li>
          </ul>
        </article>
        <article class="rounded-lg border border-border bg-background/40 p-6">
          <h3 class="text-lg font-semibold text-accent">Not ideal for:</h3>
          <ul class="mt-3 list-disc list-inside space-y-2 text-sm text-foreground/80">
            <li>Ongoing, strategic guidance (choose the <a class="text-accent" href="/advisory">Retainer</a>).</li>
            <li>Team-wide training or process rollouts (choose the <a class="text-accent" href="/deep-dive">Sprint</a>).</li>
          </ul>
        </article>
      </div>
    </section>

    <Hr />

    <section class="space-y-4">
      <h2 class="text-2xl font-semibold">Choose Sessions When You Need</h2>
      <ul class="list-disc space-y-2 text-sm text-foreground/80 list-inside">
        <li>Immediate help on a targeted problem with senior-level focus.</li>
        <li>Expert second opinion before committing to a refactor or migration.</li>
        <li>Fast validation of an AI feature, prototype, or automation agent.</li>
        <li>Architecture review before scaling hiring or rewriting modules.</li>
        <li>Performance triage when something is slow and you need root causes fast.</li>
        <li>Structured mentoring to stay sharp on generative AI engineering and modern iOS patterns without adding headcount.</li>
      </ul>
      <p class="text-sm text-foreground/70">For multi-team adoption, the <a class="text-accent" href="/deep-dive#track-ai-team-accelerator">AI Team Accelerator track of The Sprint</a> is usually a better fit.</p>
    </section>

    <Hr />

    <section class="space-y-8">
      <h2 class="text-2xl font-semibold">What We Cover in Sessions</h2>
      <div class="grid gap-6 md:grid-cols-2">
        <article class="rounded-lg border border-border bg-background/60 p-6">
          <h3 class="text-lg font-semibold text-accent">1. iOS Engineering</h3>
          <p class="text-sm text-foreground/70">SwiftUI &amp; UIKit architecture, performance, App Store delivery.</p>
          <ul class="mt-3 list-disc space-y-2 text-sm text-foreground/80 list-inside">
            <li>Architecture audits for SwiftUI migrations, TCA adoption, modularization.</li>
            <li>Build time optimization via Tuist, SPM, CI/CD improvements.</li>
            <li>Performance profiling for startup, rendering, and memory.</li>
            <li>App Store readiness (privacy manifests, review prep).</li>
          </ul>
          <p class="mt-3 text-xs text-foreground/60">Example: cut build times 35% for a scaling SwiftUI codebase.</p>
        </article>
        <article class="rounded-lg border border-border bg-background/60 p-6">
          <h3 class="text-lg font-semibold text-accent">2. Agentic Automation</h3>
          <p class="text-sm text-foreground/70">LLM integration, prompt design, governance.</p>
          <ul class="mt-3 list-disc space-y-2 text-sm text-foreground/80 list-inside">
            <li>Design agent-first workflows with clear guardrails.</li>
            <li>Orchestrate Claude/GPT/on-device models with evaluation harnesses.</li>
            <li>Browser/system automation pipelines for production teams.</li>
            <li>Safety, monitoring, and fallback strategies.</li>
          </ul>
          <p class="mt-3 text-xs text-foreground/60">Example: reduced LLM spend from €2k → €40/month via caching + routing.</p>
        </article>
        <article class="rounded-lg border border-border bg-background/60 p-6">
          <h3 class="text-lg font-semibold text-accent">3. Developer Tooling</h3>
          <p class="text-sm text-foreground/70">Custom CLI, IDE workflows, observability.</p>
          <ul class="mt-3 list-disc space-y-2 text-sm text-foreground/80 list-inside">
            <li>Internal tooling tailored to your stack.</li>
            <li>Build observability dashboards and health signals.</li>
            <li>Enablement playbooks and training for engineering leads.</li>
            <li>Pairing sessions to level up senior ICs quickly.</li>
          </ul>
          <p class="mt-3 text-xs text-foreground/60">Example: delivered automation agents triaging enterprise support load daily.</p>
        </article>
        <article class="rounded-lg border border-border bg-background/60 p-6">
          <h3 class="text-lg font-semibold text-accent">4. Rapid Validation</h3>
          <p class="text-sm text-foreground/70">Spike AI features, measure productivity, de-risk decisions.</p>
          <ul class="mt-3 list-disc space-y-2 text-sm text-foreground/80 list-inside">
            <li>Prototype AI-assisted features with go/no-go criteria.</li>
            <li>Design experiments to measure productivity gains.</li>
            <li>Create technical narratives and demos for leadership.</li>
            <li>Assess vendors and integration feasibility.</li>
          </ul>
          <p class="mt-3 text-xs text-foreground/60">Example: validated an on-device transcription MVP in 3 sessions, shipped in 2 weeks.</p>
        </article>
      </div>
    </section>

    <Hr />

    <section class="space-y-6">
      <h2 class="text-2xl font-semibold">Build a Mentoring Cadence</h2>
      <p class="text-sm text-foreground/70">
        Use sessions as a lightweight retainer: reserve a weekly or bi-weekly slot to review PRs, pressure-test AI prompts, or co-design architecture upgrades. I document each call with action items so progress compounds between meetings.
      </p>
      <p class="text-sm text-foreground/70">
        Hour packs make it easy to pause and restart as needed—no long-term contract, just focused time with a principal-level partner when you need it.
      </p>
    </section>

    <Hr />

    <section class="space-y-6">
      <h2 class="text-2xl font-semibold">When to Choose Sessions vs Productized Offers</h2>
      <div class="grid gap-6 md:grid-cols-2">
        <article class="rounded-lg border border-border bg-background/40 p-6">
          <h3 class="text-lg font-semibold text-accent">Choose Engineering Sessions when:</h3>
          <ul class="mt-3 list-disc list-inside space-y-2 text-sm text-foreground/80">
            <li>You need immediate help on a specific problem (performance bug, architecture question).</li>
            <li>You want to validate an idea quickly (prototype an AI feature in 2–3 sessions).</li>
            <li>You need a second opinion before committing to larger work.</li>
            <li>You prefer flexible, ad-hoc scheduling.</li>
          </ul>
        </article>
        <article class="rounded-lg border border-border bg-background/40 p-6">
          <h3 class="text-lg font-semibold text-accent">Consider productized offers when:</h3>
          <ul class="mt-3 list-disc list-inside space-y-2 text-sm text-foreground/80">
            <li>You need an embedded senior solver → <a class="text-accent" href="/advisory">iOS &amp; AI Advisory Retainer</a>.</li>
            <li>Your team needs AI adoption training → <a class="text-accent" href="/deep-dive#track-ai-team-accelerator">The Sprint (AI Team Accelerator track)</a>.</li>
          </ul>
        </article>
      </div>
    </section>

    <Hr />

    <section class="space-y-6">
      <h2 class="text-2xl font-semibold">Session Variants</h2>
      <div class="grid gap-6 md:grid-cols-2">
        {sessionVariants.map(variant => (
          <article class="rounded-lg border border-border bg-background/40 p-6">
            <h3 class="text-lg font-semibold text-accent">{variant.title}</h3>
            <p class="mt-3 text-sm text-foreground/80">{variant.description}</p>
            <a
              class="mt-4 inline-flex text-sm text-accent"
              href="https://cal.com/tarasenko/60min"
              target="_blank"
              rel="noreferrer"
              data-stats-event="Conversion: Session Booking"
              data-stats-category="conversion"
              data-stats-props={JSON.stringify({
                service: "sessions",
                placement: "variant-list",
                variant: variant.title,
              })}
            >
              {variant.cta} →
            </a>
          </article>
        ))}
      </div>
    </section>

    <Hr />

    <section class="space-y-4">
      <h2 class="text-2xl font-semibold">Ready to Book?</h2>
      <p class="text-sm text-foreground/80">Include repositories, context, and constraints so we can ship outcomes inside the session.</p>
      <div class="flex flex-col gap-4 sm:flex-row sm:items-center">
        <PickMyBrainButton
          variant="pushable"
          duration="60min"
          text="Book Engineering Session"
          eventName="Conversion: Session Booking"
          eventCategory="conversion"
          eventProps={{ service: "sessions", placement: "closing-cta", product: "booking" }}
        />
      </div>
      <p class="text-sm text-foreground/60">Prefer team-wide enablement? <a class="text-accent" href="/deep-dive#track-ai-team-accelerator">Explore The Sprint's AI Team Accelerator track</a>.</p>
      <p class="text-sm text-foreground/70">Looking for other engagement options? <a class="text-accent" href="/consulting">See the full consulting overview &rarr;</a></p>
    </section>
  </main>
  <Footer />
</Layout>
