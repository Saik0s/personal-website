---
import Hr from "./Hr.astro";
import Socials from "./Socials.astro";

const currentYear = new Date().getFullYear();

export interface Props {
  noMarginTop?: boolean;
}

const { noMarginTop = false } = Astro.props;

const workLinks = [
  { href: "/deep-dive", label: "The Sprint" },
  { href: "/advisory", label: "The Retainer" },
  { href: "/sessions", label: "The Entry Point" },
];

const exploreLinks = [
  { href: "/projects", label: "Projects" },
  { href: "/posts", label: "Blog" },
  { href: "/about", label: "About" },
  { href: "/search", label: "Search" },
];
---

<footer class:list={["w-full", { "mt-auto": !noMarginTop }]}>
  <Hr noPadding />
  <div class="mx-auto flex w-full max-w-app flex-col gap-8 px-4 py-8 md:flex-row md:items-start md:justify-between">
    <div class="flex flex-col items-center text-center md:items-start md:text-left">
      <Socials centered />
      <p class="mt-4 text-sm text-foreground/70">
        Limited-availability solver partnering with iOS teams through async advisory, AI accelerators, and focused engineering sessions.
      </p>
    </div>
    <div class="grid w-full gap-8 text-center text-sm text-foreground/70 sm:grid-cols-2 md:text-left">
      <div>
        <p class="text-xs uppercase tracking-wide text-foreground">Work</p>
        <ul class="mt-3 space-y-2">
          {workLinks.map(link => (
            <li>
              <a href={link.href} class="hover:text-accent">{link.label}</a>
            </li>
          ))}
        </ul>
      </div>
      <div>
        <p class="text-xs uppercase tracking-wide text-foreground">Explore</p>
        <ul class="mt-3 space-y-2">
          {exploreLinks.map(link => (
            <li>
              <a href={link.href} class="hover:text-accent">{link.label}</a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    <div class="flex flex-col items-center whitespace-nowrap text-sm text-foreground/60 md:items-end">
      <span>Copyright &#169; {currentYear}</span>
      <span>All rights reserved.</span>
    </div>
  </div>
</footer>
