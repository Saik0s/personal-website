---
// Pick My Brain scheduling button component
export interface Props {
  variant?: "simple" | "pushable";
  duration?: "30min" | "60min";
  text?: string;
}

const {
  variant = "simple",
  duration = "60min",
  text = duration === "30min" ? "Pick My Brain 30 min" : "Pick My Brain 60 min",
} = Astro.props;

const calLink =
  duration === "30min"
    ? "https://cal.com/tarasenko/30min"
    : "https://cal.com/tarasenko/60min";
---

{
  variant === "pushable" ? (
    <button class="pushable">
      <a
        href={calLink}
        target="_blank"
        style="color: inherit; text-decoration: none;"
      >
        <span class="shadow" />
        <span class="edge" />
        <span class="front">{text}</span>
      </a>
    </button>
  ) : (
    <a href={calLink} target="_blank" class="about-button pick-my-brain-button">
      {text}
    </a>
  )
}
